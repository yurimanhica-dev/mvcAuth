@using Autentication.ViewModels 
@model VerifyEmailViewModel 
@{ 
    ViewData["Title"]= "VerifyEmail"; 
    Layout = "~/Views/Shared/_AccountLayout.cshtml"; 
}

<div class="bg">
  <div class="container">
    <div class="cover">
      <div class="front">
        <img src="/images/verifs.jpg" alt="" />
        <div class="text">
          <span class="text-1"
            >Every new friend is a <br />
            new adventure</span
          >
          <span class="text-2">Let's get connected</span>
        </div>
      </div>
    </div>
    <div class="forms">
      <div class="form-content">
        <div class="login-form">
          <div class="title">Verify Email</div>
          <form asp-action="VerifyEmail" method="post">
            <div class="input-boxes">
              <div class="input-box">
                <i class="fas fa-envelope"></i>
                <input asp-for="Email" placeholder="Enter your Email" />
              </div>
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <span asp-validation-for="Email" class="text-danger"></span>
              <div class="button input-box">
                <input type="submit" value="Verify Email" />
              </div>
              <div class="text sign-up-text">
                Don't have an account?
                <a asp-controller="Account" asp-action="Register">Signup now</a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

@using Autentication.ViewModels 
@model LoginViewModel 
@{ 
    ViewData ["Title"] = "Authentication";
    Layout = "~/Views/Shared/_AccountLayout.cshtml"; 
}

<div class="bg">
  <div class="container">
    <input type="checkbox" id="flip" />
    <div class="cover">
      <div class="front">
        <img src="/images/login.jpg" alt="" />
        <div class="text">
          <span class="text-1"
            >Every new friend is a <br />
            new adventure</span
          >
          <span class="text-2">Let's get connected</span>
        </div>
      </div>
    </div>
    <div class="forms">
      <div class="form-content">
        <div class="login-form">
          <div class="title">Login</div>
          <form asp-action="Login" method="post">
            <div class="input-boxes">
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <div class="input-box">
                <i class="fas fa-envelope"></i>
                <input asp-for="Email" placeholder="Enter your Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
              </div>
              <div class="input-box">
                <i class="fas fa-lock"></i>
                <input asp-for="Password" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
              </div>
              <div class="text sign-up-text d-flex justify-content-between">
                <label class="ml-3">
                  <input
                    asp-for="RememberMe"
                    style="hover:text-decoration: none;"
                  />
                  @Html.DisplayNameFor(m => m.RememberMe)
                </label>
                <a asp-controller="Account" asp-action="VerifyEmail"
                  >Forgot password?</a>
              </div>
              <div class="button input-box">
                <input type="submit" value="Login" />
              </div>
              <div class="text sign-up-text">
                Don't have an account?
                <a asp-controller="Account" asp-action="Register">Sigup now</a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

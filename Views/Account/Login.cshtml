@using Autentication.ViewModels
@model LoginViewModel
@{
  ViewData["Title"] = "Authentication";
  Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="bg">
  <div class="container">
    <input type="checkbox" id="flip" />
    <div class="cover">
      <div class="front">
        <img src="/images/verifs.jpg" alt="" />
        <div class="text">
          <span class="text-1">MALESOFTWARE</span>
          <span class="text-2">MODULO DE R.H</span>
        </div>
      </div>
    </div>
    <div class="forms">
      <div class="form-content">
        <div class="login-form">
          <div class="d-flex flex-column align-items-center justify-content-center mb-3">
            <img src="/images/malesoft.ico" alt="Logo" class="mb-3" style="width: 50px; height: 50px;" />
            <h2 class="ms">LOGIN</h2>
          </div>
          <form asp-action="Login" method="post">
            <div class="input-boxes">
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <div class="input-box">
                <i class="fas fa-envelope"></i>
                <input asp-for="Email" placeholder="Enter your Email Edited" />
              </div>
              <span asp-validation-for="Email" class="text-danger fs-6"></span>
              <div class="input-box">
                <i class="fas fa-lock"></i>
                <input asp-for="Password" placeholder="Enter your password" />
              </div>
              <span asp-validation-for="Password" class="text-danger fs-6"></span>
              <div class="text sign-up-text d-flex justify-content-between">
                <label class="ml-3">
                  <input class="checkbox" type="checkbox" asp-for="RememberMe" />
                  @Html.DisplayNameFor(m => m.RememberMe)
                </label>
                <a asp-controller="Account" asp-action="VerifyEmail">Forgot password?</a>
              </div>
              <div class="button input-box">
                <input type="submit" value="Login" />
              </div>
              <div class="d-flex flex-column align-items-center mt-3">
                <p class="text">Or use</p>

                <a asp-controller="ExternalAuth" asp-action="GoogleLogin" class="google-circle"
                  title="Entrar com Google">
                  <i class="fab fa-google"></i>
                </a>
              </div>
              @* <div class="text sign-up-text">
                Don't have an account?
                <a asp-controller="Account" asp-action="Register">Sigup now</a>
              </div> *@
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>